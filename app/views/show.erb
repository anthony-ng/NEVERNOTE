<div class="container">
  <table>
    <h1><%= @note.title %></h1>
    <p><%= @note.content %></p>
    <li>
      <form action="/notes/<%= @note.id %>/edit ">
        <input type="submit" value="Edit">
      </form>
    </li>
    <li>
      <form action="/notes/<%= @note.id %>" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" value="Delete">
      </form>
    </li>
    <li>
      <form action="/notes">
        <input type="submit" value="Back">
      </form>
    </li>
  </table>
</div>